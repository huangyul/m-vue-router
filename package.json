{
  "name": "m-vue-router",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "node scripts/release.mjs",
    "prepare": "husky install"
  },
  "devDependencies": {
    "chalk": "^5.3.0",
    "enquirer": "^2.3.6",
    "execa": "^7.1.1",
    "globby": "^13.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "minimist": "^1.2.8",
    "p-series": "^3.0.0",
    "prettier": "^3.0.0",
    "semver": "^7.5.4",
    "typedoc": "^0.24.8",
    "typescript": "^5.0.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "@types/react",
        "react-dom"
      ]
    }
  }
}
